{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "es2016",
      "es2016.array.include",
      "es2017.object"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
